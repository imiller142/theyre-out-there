<div class="container h-100">
    <div class="mb-5">
        <p class="h1 mb-5">Add A Catch</p>
    </div>
    <div class="mt-5">
        <form class="add-lake" id = "add-lake">
            <div class="form-outline mt-5 mb-4">
                <input type="text" class="form-control w-50 mt-5 lake-name"/>
                <label class="mt-1">Lake Name</label>
            </div>

            <div class="form-outline mt-5 mb-4">
                <input type="text" class="form-control w-50 mt-5 length"/>
                <label class="mt-1">Length</label>
            </div>
            <div class="form-outline mt-5 mb-4">
                <input type="text" class="form-control w-50 mt-5 weight"/>
                <label class="mt-1">Weight</label>
            </div>
            <div class="input-group mb-3 w-50">
                <div class="input-group-prepend w-50">
                    <label class="input-group-text w-100" for="inputGroupSelect01">Fish</label>
                </div>
                <select class="custom-selects w-50" id="inputGroupSelect01">
                    {{> fish-options}}
                </select>
            </div>
            <div class="form-outline mt-5 mb-4">
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
</div>